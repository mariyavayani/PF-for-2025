//Q1
#include <stdio.h>
int main(void) {
	int num,i,fact=1;
	printf("Enter a number: ");
	scanf("%d", &num);
	if (num<0) {
		printf("Invalid.");
		return 0;
	}
	for (i=1;i<=num;i++) {
		fact = fact*i;
	}
	printf("Factorial is: %d", fact);
	return 0;
}


