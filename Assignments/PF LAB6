//while loop is more efficient because it only runs till the condition is true without wasting memory for counter variables.


//Q3
#include <stdio.h>;
int main(void) {
	int i, temp_num, num, sum,count=0, d1, d2, d3, d4, d5, flag = 1;
	printf("Enter a number(5 digits): ");
	scanf("%d", &num);
	temp_num = num;
	while (temp_num>0) {
		count++;
		temp_num = temp_num/10;
	}
	if (count != 5) {
		printf("Invalid number.");
		return 0;
	}
	d1 = num/10000;
	d2 = (num/1000) % 10;
	d3 = (num/100) % 10;
	d4 = (num/10) % 10;
	d5 = num % 10;
	sum = d1+d2+d3+d4+d5;
	if (sum%2==0) {
		for (i=1; i<=num; i++) {
			if (num%i==0) {
				flag = 0;
				break;
			
			}
		}
		if (flag == 1) {
			printf("The number you entered is prime.\n");
		}
		else {
			printf("Not prime.");
		}
	}
	else {
		if ((d1==d5) && (d2==d4)) {
			printf("The number you entered is a palindrome.\n");
			return 0;
		}
	}
	return 0;
}


//Q6
#include <stdio.h>
int main(void) {
	int i,j,k, stars=1, spaces=3;
	for (i=1; i<=4; i++) {
	
		for (j=1; j<=spaces; j++) {
			printf(" ");
		}
		for (k=0; k<stars;k++) {
			printf("*");
		}
		printf("\n");
	    stars = stars+2;
	    spaces=spaces-1;
	}
	return 0;
}
