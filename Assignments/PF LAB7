//Q1
#include <stdio.h>
int main() {
	int n;
	printf("Enter amount of numbers you want to add: ");
	scanf("%d", &n);
	int numbers[n];
	int sum = 0, count = 0;
	float avg;
	for (int i=0;i<n;i++) {
		printf("Enter number: ");
		scanf("%d",  &numbers[i]);
		if (numbers[i] > 0) {
			sum += numbers[i];	
			count++;
		}	
	}
	if (count>0) {
		avg = sum/count;
	}
	
	printf("The sum of all positive numbers is: %d\n", sum);
	printf("The average of all positive numbers is: %.1f", avg);
}


//Q2
#include <stdio.h>
int main() {
	int r,c,t=0;
	printf("Enter number of rows and columns: ");
	scanf("%d %d", &r,&c);
	int a[r][c];
	printf("Enter elements of your %d by %d matrix:\n", r,c);
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			scanf("%d", &a[i][j]);
		}
	}
	printf("%d by %d matrix:\n", r,c);
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			printf("%d ", a[i][j]);
		}
		printf("\n");
	}
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			if (a[i][j] == 0) {
				t += 1;
			}
		}
	}
	if (t>=((r*c)/2)) {
		printf("The matrix you entered is a sparse matrix.");
	}
	else {
		printf("The matrix you entered is not a sparse matrix.");
	}
}


//Q3
#include <stdio.h>
#include <string.h>
int main() {
	char first_name[20];
	char last_name[20];
	char full_name[40];
	printf("Enter your first name: ");
	scanf("%s", first_name);
	printf("Enter your last name: ");
	scanf("%s", last_name);
	printf("Your full name: ");
	strcpy(full_name, first_name);
    strcat(full_name, " ");
    strcat(full_name, last_name);
	printf("%s\n", full_name);
	printf("The number of characters in you full name: %d", strlen(full_name));
}


//Q4
#include <stdio.h>
int main() {
	int r,c,flag=1;
	printf("Enter number of rows and columns: ");
	scanf("%d %d",&r,&c);
	if (r!=c) {
		printf("The number of rows must equal the number of columns for it to be a square matrix.\n");
		
	}
	else {
		int matrix[r][c];
		printf("Enter elements of the matrix: \n");
		for (int i=0;i<r;i++) {
			for (int j=0;j<c;j++) {
				scanf("%d", &matrix[i][j]);
			}
		}
		printf("Your matrix: \n");
		for (int i=0;i<r;i++) {
			for (int j=0;j<c;j++) {
				printf("%d ", matrix[i][j]);
			}
			printf("\n");
		}
		for (int i=0;i<r;i++) {
			for (int j=0;j<c;j++) {
				if (matrix[i][j] != matrix[j][i]) {
					flag = 0;
					break;
				}
			if (flag==0) {
				break;
			}	
			}
		}
		if (flag == 1) {
			printf("Matrix is symmetric.\n");
		}
		else {
			printf("Matrix is asymmetric.\n");
		}
		printf("The transpose of your matrix: \n");
		for (int i=0;i<r;i++) {
			for (int j=0;j<c;j++) {
				printf("%d ", matrix[j][i]);
			}
			printf("\n");
		}
		
		
	}
	
}


//Q5
#include <stdio.h>
int main(void) {
	int r,c;
	printf("Enter the number of rows and columns: ");
	scanf("%d %d", &r,&c);
	int matrix[r][c];
	printf("Enter elemnts of the matrix: \n");
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			scanf("%d", &matrix[i][j]);
		}
	}
	int max=matrix[0][0];
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			if (matrix[i][j] > max) {
				max = matrix[i][j];
			}
		}
	}
	printf("Matrix: \n");
	for (int i=0;i<r;i++) {
		for (int j=0;j<c;j++) {
			printf("%d ", matrix[i][j]);
		}
		printf("\n");
	}
	printf("Maximum element of matrix: %d", max);
}
