//Q1 and Q2
#include <stdio.h>
struct Employee {
	int id;
	char name[100];
	char department[100];
	float salary;
};

int main() {
	struct Employee e1;
	printf("Enter employee name: ");
	gets(e1.name);
	printf("Enter employee id: ");
	scanf("%d", &e1.id);
	printf("Enter employee salary: ");
	scanf("%f", &e1.salary);
	getchar();
	printf("Enter employee department: ");
	gets(e1.department);
	printf("EMPLOYEE NAME: %s\n", e1.name);
	printf("EMPLOYEE ID: %d\n", e1.id);
	printf("EMPLOYEE SALARY: %.1f\n", e1.salary);
	printf("EMPLOYEE DEPARTMENT: %s", e1.department);
}

//Q3
#include <stdio.h>

struct Phone {
	int code;
	int exchange;
	int number;
};

int main() {
	struct Phone p1 = {212,767,8900};
	struct Phone p2;
	printf("Enter area code: ");
	scanf("%d", &p2.code);
	printf("Enter exchange: ");
	scanf("%d", &p2.exchange);
	printf("Enter number: ");
	scanf("%d", &p2.number);
	printf("My number is: (%d) %d-%d\n", p1.code,p1.exchange,p1.number);
	printf("Your number is: (%d) %d-%d", p2.code, p2.exchange,p2.number);
}

//Q4
#include <stdio.h>

struct Course{
	char name[50];
	float gpa;
};

struct Address {
	char street[100];
	char city[20];
	char state[20];
	int zip;
};

struct Student {
	float cgpa;
	struct Course courses[3];
	struct Address address;
};

int main() {
	struct Student students[2];
	for (int i=0;i<2;i++) {
		for (int j=0;j<3;j++) {
			printf("Enter course name of student %d: ", i+1);
			gets(students[i].courses[j].name);
			printf("Enter gpa of student %d in course %s: ", i+1,students[i].courses[j].name);
			scanf("%f", &students[i].courses[j].gpa);
			while (getchar() != '\n');
		}
		printf("Enter cgpa of student %d: ", i+1);
		scanf("%f", &students[i].cgpa);
		while (getchar() != '\n');
		printf("Enter street address of student %d: ", i+1);
		gets(students[i].address.street);
		printf("Enter city of student %d: ", i+1);
		gets(students[i].address.city);
		printf("Enter state of student %d: ", i+1);
		gets(students[i].address.state);
		printf("Enter zip of student %d: ", i+1);
		scanf("%d", &students[i].address.zip);
		while (getchar() != '\n');
	}
	float maxgpa=-1;
	int s = -1;
	char c[50];
	for (int i=0;i<2;i++) {
		for (int j=0;j<3;j++) {
			if (students[i].courses[j].gpa>maxgpa) {
				maxgpa=students[i].courses[j].gpa;
				s=i+1;
				strcpy(c,students[i].courses[j].name);
			}
		}
	}
	float maxcgpa=-1;
	int highest=-1;
	for (int i=0;i<2;i++) {
		if (students[i].cgpa>maxcgpa) {
			maxcgpa=students[i].cgpa;
			highest=i+1;
		}
	}
	printf("Student %d has the highest gpa %.1f in course %s\n", s,maxgpa, c);
	printf("Student %d has the highest cgpa %.1f", highest, maxcgpa);
	
}

//Q5
#include <stdio.h>
struct Complex {
	float real;
	float imaginary;
};



struct Complex read() {
	struct Complex temp;
	printf("Enter real part of number: ");
	scanf("%f", &temp.real);
	while (getchar() != '\n');
	printf("Enter imaginary part of number: ");
	scanf("%f", &temp.imaginary);
	while (getchar() != '\n');
	return temp;
}

void write(struct Complex a) {
	printf("Complex number: %.1f + %.1fi\n", a.real, a.imaginary);
	
}
void add(struct Complex a, struct Complex b) {
	float r=a.real + b.real;
	float i=a.imaginary+b.imaginary;
	printf("Sum: %.1f + %.1fi\n", r,i);
}

void multiply(struct Complex a, struct Complex b) {
	float r = (a.real * b.real) - (a.imaginary * b.imaginary);
    float i = (a.real * b.imaginary) + (a.imaginary * b.real);
    printf("Product: %.1f + %.1fi", r,i);
}
int main() {
	printf("COMPLEX NUMBER \n");
	struct Complex a = read();
	printf("COMPLEX NUMBER \n");
	struct Complex b=  read();
	write(a);
	write(b);
	add(a,b);
	multiply(a,b);

}
